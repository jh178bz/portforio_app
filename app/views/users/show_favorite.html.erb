<% provide(:title, @title) %>
<div class="container">
  <h1 class="h3"><%= @title %></h1>
  <div class="row">
    <%= render 'user_info' %>
    <div class="col-md-8">
      <% if @favorites.any? %>
        <ul class="list-group">
          <%= render 'user_favorite', favorites: @favorites %>
        </ul>
        <%= will_paginate @favorites %>
      <% end %>
    </div>
  </div>
</div>
