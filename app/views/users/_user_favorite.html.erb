<% favorites.each do |favorite| %>
<li class="list-group-item">
  <div class="container">
    <div class="row">
      <div class="col-md-3 item-image">
        <img src=<%= favorite.item.image.url %>>
      </div>
      <div class="col-md-3 item-name">
        <%= link_to favorite.item.name, item_path(favorite.item) %>
      </div>
    </div>
  </div>
</li>
<% end %>
