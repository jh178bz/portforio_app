<% favorites.each do |favorite| %>
  <div class="card">
    <div class="card-header">
      <img src=<%= favorite.item.image.url %> class="card-img-top" alt="カードの画像">
    </div>
    <div class="card-body text-center">
      <h5 class="card-title"><%= link_to favorite.item.name, item_path(favorite.item) %></h5>
      <p class="card-text">投稿レビュー数 (<%= favorite.item.reviews.all.count %>)</p>
    </div>
  </div>
<% end %>
