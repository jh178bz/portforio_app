<div class="row">
  <%= search_form_for @q do |f| %>
    <div class="col-md-10">
      <div class="form-group">
        <%= f.search_field :title_or_content_cont, placeholder: "レビュー検索", class: 'form-control' if current_page?(reviews_path) %>
        <%= f.search_field :name_cont, placeholder: "ユーザー検索", class: 'form-control' if current_page?(users_path) %>
        <%= f.search_field :name_cont, placeholder: "登録タイヤ検索", class: 'form-control' if current_page?(items_path) %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <%= f.submit nil, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
