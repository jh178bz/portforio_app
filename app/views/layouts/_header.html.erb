<header class="navbar navbar-fixed-top navbar-default" style="background-color:white;">
  <div class="container">
    <%= link_to "SR Share", root_url, class: 'navbar-brand' %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.passive_notifications == true %>
            <li class="new_notification">
          <% else %>
            <li class="no_notification">
          <% end %>
          <%= link_to notifications_path do %><span>通知</span><% end %></li>
          <li><%= link_to "レビュー一覧", reviews_path %></li>
          <li><%= link_to "ユーザーを探す", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              タイヤを探す<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "一覧から探す", items_path %></li>
              <li><%= link_to "カテゴリから探す", categories_path %></li>
              <li><%= link_to "メーカーから探す", makers_path %></li>
              <li class="divider"></li>
            </ul>
          </li>
          <%= render 'layouts/admin_menu' %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              メニュー<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "SR Shareとは？", about_path %></li>
              <li><%= link_to "マイページ", user_path(current_user.id) %></li>
              <li><%= link_to "ログアウト", destroy_user_session_path , method: :delete %></li>
              <li class="divider"></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン・新規登録", new_user_session_path %></li>
          <li><%= link_to "SR Shareとは？", about_path unless user_signed_in? %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
